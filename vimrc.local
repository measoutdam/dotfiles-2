" *********************************************
" General Configuaraion
" *********************************************
" Set and split to below
set splitbelow

" Setting vert line for space and set tab/trail character
set fillchars+=vert:\ |set list listchars=tab:\ \ ,trail:âˆ™

" Specifying Ruby path
let g:ruby_path = system('echo $HOME/.rbenv/shims')

" autocmd InsertLeave,WinEnter * setlocal foldmethod=syntax " solve insert mode performance : foldmethod stays as 'syntax' when not in insert mode
" autocmd InsertEnter,WinLeave * setlocal foldmethod=manual " solve insert mode performance : foldmethod must be set to 'manual' to improve performance during editing

" *********************************************
" Auto load syntax
" *********************************************
"
" *********************************************
" Keys mapping
" *********************************************
" Opening current file in external app
nmap <silent> <leader>oc :exec 'silent !open -a "Google Chrome" % &'<CR><CR>
nmap <silent> <leader>oa :exec 'silent !atom . \| atom '.'%'.':'.line(".")<CR>

" Biding key for Debuging - d[*]
map <leader>dp obinding.pry<ESC> :w<cr>
map <leader>ds a, :js, :selenium_chrome<ESC> :w<cr>
map <leader>dsd :%s/\,\ :js,\ :selenium_chrome//g<cr> :w<cr>
map <leader>dsa osave_and_open_page<ESC> :w<cr>

" Terminal mode
if has("nvim")
  tnoremap <tab> <S-tab>
  tnoremap <c-h> <c-\><c-n><c-w>h
  tnoremap <c-j> <c-\><c-n><c-w>j
  tnoremap <c-k> <c-\><c-n><c-w>k
  tnoremap <c-l> <c-\><c-n><c-w>l
endif

" Copying current file name
map <leader>c :let @+=expand("%").":".line(".")<CR> :echom "file path copied: ".@%.":".line(".") <CR>

" Sourcing vimrc and Installing vundle
map <leader>vi :Sovimrc<CR> \| :PluginInstall<CR>

" Resizing Split Window
nnoremap <silent> <Leader>+ :exe "resize " . (winheight(0) * 3/2)<CR>
nnoremap <silent> <Leader>- :exe "resize " . (winheight(0) * 2/3)<CR>

" *********************************************
" Custom Commands
" *********************************************
" Opening vimrc and source vimrc
command! Vimrc e ~/.dotfiles/vimrc
command! Sovimrc so ~/.vimrc

" Showing symbol name under the cursor
command! Symbol echo synIDattr(synID(line("."), col("."), 1), "name")

" Easy Expansion of the Active File Directory
" :e %% or ,ew
cnoremap %% <C-R>=fnameescape(expand('%:h')).'/'<cr>
map <leader>ew :e %%
map <leader>es :sp %%
map <leader>ev :vsp %%
map <leader>et :tabe %%
